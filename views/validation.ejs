<div class="container mt-5">


  <% if (offre !== '') { %>
  <div class="jumbotron">
    <h1 class="display-3">Airline : <%= offre.airline %> | Prix : <%= offre.prix %> </h1>
    <p class="lead">Aeroport Depart : <%= offre.aeroport_depart %> | Aeroport Arriver : <%= offre.aeroport_arriver %>
    </p>
    <hr class="my-4">
    <p class="lead">Full Name : <%= user.name %> | Email : <%= user.email %>
    </p>
    <hr class="my-4">
    <p>Date Depart : <%= offre.date_depart %> | Dare Retour : <%= offre.date_retour %> || Nombre de place <%= nplace %>
      Places</p>
    <p class="lead">
      <a class="btn btn-primary btn-lg" href="/payment" role="button">Valider l'offre</a>
    </p>
  </div>
  <% } %>
</div>